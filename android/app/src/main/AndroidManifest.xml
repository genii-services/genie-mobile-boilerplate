<!--/*.for react-native 0.61.5, checked at 2020-02-17 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="services.genii.geniemobileboilerplate">

	<uses-permission android:name="android.permission.INTERNET" />

	<!--/*.rn-fetch-blob용 -->
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

	<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
	<uses-permission android:name="android.permission.BLUETOOTH"/>
	<!--/*.react-native-device-info에서 사용 for Device Name -->
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	<!--/*.react-native-device-info에서 사용 for Phone Number -->
	<uses-permission android:name="android.permission.INSTALL_PACKAGES" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<!--/*.Only if you're using GCM or localNotificationSchedule() > -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<permission android:name="${applicationId}.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />
	<!--/*.Local Notification용 -->
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<!--/*.App Install 권한 -->
	<uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
	<!--/*.Google Play에서 플랫폼 버전 요구사항을 충족하지 않는 기기를 필터링 -->
	<uses-sdk android:minSdkVersion="21" android:targetSdkVersion="28" />

	<!--/*.android:roundIcon="@mipmap/ic_launcher_round" 라운드 아이콘을 추가할 경우 -->
	<application android:name=".MainApplication" android:label="@string/app_name" android:icon="@mipmap/ic_launcher" android:allowBackup="false" android:theme="@style/AppTheme">
		<!--/*.android:configChanges react-native-orientation-locker -->
		<!--/*.android:launchMode Linking용 singleTask, FCM은 singleTop -->
		<activity android:name=".MainActivity" android:label="@string/app_name" android:configChanges="keyboard|keyboardHidden|orientation|screenSize" android:windowSoftInputMode="adjustResize" android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<!--/*.rn-fetch-blob용 -->
				<action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
			</intent-filter>
			 
			<intent-filter>
                <action android:name="services.genii.geniemobileboilerplate.action.LOGIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>

			<!--/*.딥링크 설정 -->
			<intent-filter android:label="filter_react_native">
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<!--/*.rnapp://home -->
				<data android:scheme="rnapp" android:host="home" />
			</intent-filter>
		</activity>
		<activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
	</application>

</manifest>
